%command for multi-slide lists in beamer
%usage: \multiSlideItems{SlidesTitle}{Pre-listContent}{listLength}{List-as-&-separatedArray}{Post-listContent}
\newcommand{\multiSlideItems}[]{
\newarray\SlideItems
\readarray{SlideItems}{#4}
\multido{\i=1+1}{#3}{%
    {\begin{frame}
        \frametitle{#1}
        #2
        {\begin{itemize}
            {\multido{\ii=1+1}{#3}{%
                \ifthenelse{\i<\ii}{\item}{\item \SlideItems(\ii)}}}
        \end{itemize}
        \ifthenelse{\i<#3}{}{#5}}
    \end{frame}}}
}



